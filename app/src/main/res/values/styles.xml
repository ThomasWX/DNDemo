<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="WatchButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:minWidth">180px</item>
        <item name="android:minHeight">63px</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">24px</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <!--



    -->

    <style name="WatchDialog" >
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>

        <item name="android:windowBackground">@drawable/nubia_window_background</item>
        <item name="buttonStyle">@style/WatchButtonStyle</item>
        <item name="android:backgroundDimAmount">1.0</item>
    </style>
</resources>
